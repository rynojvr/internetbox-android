<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/InternetBoxChatListItemTheme"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:minHeight="64dp"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/chat_list_item_text_title"
        style="@style/InternetBoxChatListItemTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@+id/chat_list_item_button_new_count"
        android:text="TITLE"
        android:textSize="18sp"
        android:marqueeRepeatLimit="marquee_forever" />

    <Button 
        android:id="@+id/chat_list_item_button_new_count"
        style="@style/InternetBoxBaseTheme"
        android:layout_height="40dp"
        android:layout_width="30dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:text="500" 
        android:gravity="center_vertical"
        android:textColor="#33B5E5"/>

    <TextView
        android:id="@+id/chat_list_item_text_subtitle"
        style="@style/InternetBoxBaseTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/chat_list_item_text_title"
        android:layout_toRightOf="@id/chat_list_item_button_new_count"
        android:layout_below="@id/chat_list_item_text_title"
        android:text="created_by"
        android:textSize="12sp" />
    
    

</RelativeLayout>